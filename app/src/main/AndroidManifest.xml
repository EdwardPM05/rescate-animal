<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.rescateanimal">

    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permisos para reportes y foto de perfil -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="28"
                     tools:ignore="ScopedStorage" />

    <!-- Permiso para Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Rescateanimal"
            android:supportsRtl="true"
            tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyDFKgdTpfM23dGuxzmLhiS1EPvHgsClsEg" />

        <!-- FileProvider -->
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="com.example.rescateanimal.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths" />
        </provider>

        <!-- DISPATCHER -->
        <activity
                android:name=".RoleDispatcherActivity"
                android:exported="true"
                android:theme="@style/Theme.Rescateanimal"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ACTIVITIES PRINCIPALES -->
        <activity
                android:name=".MainActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".PartnerMainActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".AdminMetricsActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- AUTENTICACIÓN -->
        <activity
                android:name=".LoginActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <activity
                android:name=".RegisterActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- PERFIL -->
        <activity
                android:name=".ProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".EditProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- USUARIO NORMAL -->
        <activity
                android:name=".MapActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".ReportActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation"
                android:windowSoftInputMode="adjustResize" />

        <activity
                android:name=".MyReportsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <activity
                android:name=".ReportDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <activity
                android:name=".AdoptActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation"
                android:windowSoftInputMode="adjustResize" />

        <activity
                android:name=".MyAdoptionsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <activity
                android:name=".AdoptionDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <activity
                android:name=".AnimalDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- AFILIACIÓN -->
        <activity
                android:name=".AffiliateActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <activity
                android:name=".RegisterPetActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- UTILIDADES -->
        <activity
                android:name=".LocationPickerActivity"
                android:exported="false"
                android:label="Seleccionar Ubicación"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ADMIN -->
        <activity
                android:name=".AdminReportsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".AdminAffiliatesActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".AdminUsersActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity
                android:name=".AdminReportDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- CORRECCIÓN AQUÍ: Usamos el tema de la App, NO AppCompat -->
        <activity
                android:name=".AdminAffiliateDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

    </application>
</manifest>
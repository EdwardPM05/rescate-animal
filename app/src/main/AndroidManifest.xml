<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.rescateanimal">

    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permisos para reportes y foto de perfil (cámara y almacenamiento) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="28"
                     tools:ignore="ScopedStorage" />

    <!-- Permiso para Android 13+ (API 33+) para acceder a imágenes -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Rescateanimal"
            android:supportsRtl="true"
            tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyDFKgdTpfM23dGuxzmLhiS1EPvHgsClsEg" />

        <!-- FileProvider para compartir archivos de fotos de la cámara y perfil -->
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="com.example.rescateanimal.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths" />
        </provider>

        <!-- ============================================ -->
        <!-- DISPATCHER: Punto de entrada de la app -->
        <!-- Redirige a la Activity correcta según el rol -->
        <!-- Usa el Splash Screen nativo de Android 12+ -->
        <!-- ============================================ -->
        <activity
                android:name=".RoleDispatcherActivity"
                android:exported="true"
                android:theme="@style/Theme.Rescateanimal"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ============================================ -->
        <!-- ACTIVITIES PRINCIPALES POR ROL -->
        <!-- ============================================ -->

        <!-- MainActivity - SOLO para ROL USER -->
        <activity
                android:name=".MainActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- PartnerMainActivity - Activity principal para ROL PARTNER -->
        <activity
                android:name=".PartnerMainActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- AdminMetricsActivity - Activity principal para ROL ADMIN -->
        <activity
                android:name=".AdminMetricsActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- ============================================ -->
        <!-- AUTENTICACIÓN -->
        <!-- ============================================ -->

        <!-- LoginActivity -->
        <activity
                android:name=".LoginActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- RegisterActivity -->
        <activity
                android:name=".RegisterActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ============================================ -->
        <!-- PERFIL Y CONFIGURACIÓN -->
        <!-- ============================================ -->

        <!-- ProfileActivity - Compartida por todos los roles -->
        <activity
                android:name=".ProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- EditProfileActivity -->
        <activity
                android:name=".EditProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- ============================================ -->
        <!-- ACTIVITIES DE USUARIO NORMAL -->
        <!-- ============================================ -->

        <!-- MapActivity - Mapa para usuarios normales (reportes) -->
        <activity
                android:name=".MapActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- MapPartnerActivity - Mapa para partners (negocios afiliados) -->
        <activity
                android:name=".MapPartnerActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- ReportActivity -->
        <activity
                android:name=".ReportActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation"
                android:windowSoftInputMode="adjustResize" />

        <!-- MyReportsActivity -->
        <activity
                android:name=".MyReportsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- ReportDetailActivity -->
        <activity
                android:name=".ReportDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- AdoptActivity - Pantalla de adopciones -->
        <activity
                android:name=".AdoptActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation"
                android:windowSoftInputMode="adjustResize" />

        <!-- MyAdoptionsActivity -->
        <activity
                android:name=".MyAdoptionsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- AdoptionDetailActivity -->
        <activity
                android:name=".AdoptionDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- AnimalDetailActivity -->
        <activity
                android:name=".AnimalDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ============================================ -->
        <!-- AFILIACIÓN -->
        <!-- ============================================ -->

        <!-- AffiliateActivity - Formulario de afiliación -->
        <activity
                android:name=".AffiliateActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- RegisterPetActivity - Registro de mascotas (Partners) -->
        <activity
                android:name=".RegisterPetActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- ============================================ -->
        <!-- UTILIDADES -->
        <!-- ============================================ -->

        <!-- LocationPickerActivity -->
        <activity
                android:name=".LocationPickerActivity"
                android:exported="false"
                android:label="Seleccionar Ubicación"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ============================================ -->
        <!-- ADMIN ACTIVITIES - Panel de Administración -->
        <!-- ============================================ -->

        <!-- AdminReportsActivity - Gestión de Reportes -->
        <activity
                android:name=".AdminReportsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- AdminAffiliatesActivity - Gestión de Afiliaciones -->
        <activity
                android:name=".AdminAffiliatesActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <activity android:name=".AffiliateDetailActivity" />

        <activity
                android:name=".AdminAdoptionsActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- AdminUsersActivity - Gestión de Usuarios -->
        <activity
                android:name=".AdminUsersActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal.NoAnimation" />

        <!-- AdminReportDetailActivity - Detalle de Reporte para Admin -->
        <activity
                android:name=".AdminReportDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

    </application>
</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.rescateanimal">

    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permisos para reportes (cámara y almacenamiento) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="28"
                     tools:ignore="ScopedStorage" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Rescateanimal"
            android:supportsRtl="true"
            tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyCN0iHr8y8uMW72iQeQyQ9_bnWTz0GdPlA" />

        <!-- MainActivity (Dashboard) -->
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
                android:name=".LoginActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- RegisterActivity -->
        <activity
                android:name=".RegisterActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ProfileActivity -->
        <activity
                android:name=".ProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- EditProfileActivity -->
        <activity
                android:name=".EditProfileActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- MapActivity -->
        <activity
                android:name=".MapActivity"
                android:exported="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- ReportActivity -->
        <activity
                android:name=".ReportActivity"
                android:exported="false"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- AdoptActivity - SOLO UNA VEZ -->
        <activity
                android:name=".AdoptActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- RegisterPetActivity -->
        <activity
                android:name=".RegisterPetActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- LocationPickerActivity -->
        <activity
                android:name=".LocationPickerActivity"
                android:exported="false"
                android:label="Seleccionar Ubicación"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

        <!-- AffiliateActivity -->
        <activity
                android:name=".AffiliateActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal"
                android:windowSoftInputMode="adjustResize" />

        <!-- AnimalDetailActivity -->
        <activity
                android:name=".AnimalDetailActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Rescateanimal" />

    </application>
</manifest>
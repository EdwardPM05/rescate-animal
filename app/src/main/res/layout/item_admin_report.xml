<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="12dp"
                                   app:cardCornerRadius="16dp"
                                   app:cardElevation="2dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:foreground="?attr/selectableItemBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

        <!-- Report Photo/Icon Container -->
        <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

            <!-- ImageView for Photo -->
            <ImageView
                    android:id="@+id/ivReportPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corner_16"
                    android:clipToOutline="true"
                    android:contentDescription="Foto del reporte" />

            <!-- Icon Background -->
            <View
                    android:id="@+id/vIconBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corner_16"
                    android:backgroundTint="#F5F5F5"
                    android:visibility="gone" />

            <!-- ImageView for Icon -->
            <ImageView
                    android:id="@+id/ivReportIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_warning"
                    android:contentDescription="Icono"
                    android:visibility="gone" />

        </FrameLayout>

        <!-- Report Info -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

            <!-- Report Type -->
            <TextView
                    android:id="@+id/tvReportType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal en peligro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

            <!-- Report Details with Icon -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/ivReportInfoIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Info" />

                <TextView
                        android:id="@+id/tvReportInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urgente"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="1"
                        android:ellipsize="end" />

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_pin"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Ubicación" />

                <TextView
                        android:id="@+id/tvReportLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lima, Perú"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="1"
                        android:ellipsize="end" />

            </LinearLayout>

            <!-- Status and Date -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                <!-- Status Badge -->
                <LinearLayout
                        android:id="@+id/llStatusBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/status_badge_pending"
                        android:paddingStart="6dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/ivStatusIcon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_pending"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Estado" />

                    <TextView
                            android:id="@+id/tvReportStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendiente"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                </LinearLayout>

                <!-- Date -->
                <TextView
                        android:id="@+id/tvReportDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hace 2 días"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="8dp"
                        android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <!-- Change Status Button -->
            <ImageView
                    android:id="@+id/btnChangeStatus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_edit"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cambiar estado" />

            <!-- Delete Button -->
            <ImageView
                    android:id="@+id/btnDeleteReport"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_delete"
                    android:padding="6dp"
                    android:layout_marginTop="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
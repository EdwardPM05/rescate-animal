<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gradient">

    <!-- Header con Gradiente -->
    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard Admin"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:fontFamily="sans-serif-medium" />

                <TextView
                        android:id="@+id/tvLastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Actualizado ahora"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:alpha="0.95" />

            </LinearLayout>

            <ImageView
                    android:id="@+id/btnRefresh"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_refresh"
                    android:padding="10dp"
                    android:background="@drawable/ripple_circle_white_elevated"
                    android:tint="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp"
                    android:contentDescription="Actualizar" />

        </LinearLayout>

    </LinearLayout>

    <!-- ScrollView con GrÃ¡ficas -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation"
            android:layout_below="@id/headerLayout"
            android:fillViewport="true"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- ========== CARDS DE MÃ‰TRICAS CON GRADIENTES ========== -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <!-- Card: Total Usuarios con Gradiente -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardUsers"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue_purple"
                            android:orientation="vertical"
                            android:padding="18dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconUsers"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_usuarios"
                                    android:tint="@android:color/white"
                                    android:elevation="2dp" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:text="Usuarios"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:alpha="0.95" />

                        </LinearLayout>

                        <TextView
                                android:id="@+id/tvTotalUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="..."
                                android:textColor="@android:color/white"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chartUsers"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card: Total Reportes -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardReports"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_blue_sky"
                            android:orientation="vertical"
                            android:padding="18dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconReports"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_reports_review"
                                    android:tint="@android:color/white"
                                    android:elevation="2dp" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:text="Reportes"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:alpha="0.95" />

                        </LinearLayout>

                        <TextView
                                android:id="@+id/tvTotalReports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="..."
                                android:textColor="@android:color/white"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chartReports"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <!-- Card: Partners -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardPartners"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_turquoise_pink"
                            android:orientation="vertical"
                            android:padding="18dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconPartners"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_affiliates"
                                    android:tint="@android:color/white"
                                    android:elevation="2dp" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:text="Partners"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:alpha="0.95" />

                        </LinearLayout>

                        <TextView
                                android:id="@+id/tvActivePartners"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="..."
                                android:textColor="@android:color/white"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chartPartners"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card: Adopciones -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardAdoptions"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_pink_yellow"
                            android:orientation="vertical"
                            android:padding="18dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconAdoptions"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_adopciones"
                                    android:tint="@android:color/white"
                                    android:elevation="2dp" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:text="Adopciones"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:alpha="0.95" />

                        </LinearLayout>

                        <TextView
                                android:id="@+id/tvTotalAdoptions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="..."
                                android:textColor="@android:color/white"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chartAdoptions"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- ========== GRÃFICA GRANDE: REPORTES POR ESTADO ========== -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“Š Reportes por Estado"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="14dp"
                    android:backgroundTint="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chartReportsByStatus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ========== GRÃFICA: ACTIVIDAD SEMANAL ========== -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“ˆ Actividad de los Ãšltimos 7 DÃ­as"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="14dp"
                    android:backgroundTint="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartWeeklyActivity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ========== GRÃFICA: DISTRIBUCIÃ“N DE ADOPCIONES ========== -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ¾ DistribuciÃ³n de Adopciones"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="14dp"
                    android:backgroundTint="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chartAdoptionDistribution"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ========== GRÃFICA: CRECIMIENTO MENSUAL ========== -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“… Crecimiento Mensual"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="14dp"
                    android:backgroundTint="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartMonthlyGrowth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Espacio extra -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
            android:id="@+id/bottomNavigation"
            layout="@layout/bottom_navigation" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_gray">

    <!-- Header -->
    <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/primary_orange"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GestiÃ³n de Reportes"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Revisa y modera todos los reportes"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9" />

    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
            android:id="@+id/loadingState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_above="@id/bottomNavigation"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

        <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="@color/primary_orange" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando reportes..."
                android:textColor="@color/text_secondary"
                android:textSize="15sp" />

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_above="@id/bottomNavigation"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="ðŸ“‹"
                android:textSize="72sp"
                android:alpha="0.6" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="No hay reportes registrados"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los reportes aparecerÃ¡n aquÃ­ cuando se registren"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Reports List -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAdminReports"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_above="@id/bottomNavigation"
            android:padding="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:visibility="gone" />

    <!-- Bottom Navigation -->
    <include
            android:id="@+id/bottomNavigation"
            layout="@layout/bottom_navigation" />

</RelativeLayout>
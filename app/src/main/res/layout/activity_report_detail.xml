<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="4dp">

        <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="â†"
                android:textColor="@color/text_primary"
                android:textSize="24sp" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalle del reporte"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
            android:id="@+id/loadingState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

        <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando detalles..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

    </LinearLayout>

    <!-- Content State -->
    <ScrollView
            android:id="@+id/contentState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Report Header Card -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_white_elevated"
                    android:orientation="vertical"
                    android:padding="20dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                    <TextView
                            android:id="@+id/tvReportIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="âš ï¸"
                            android:textSize="32sp" />

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tvReportType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animal en peligro"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/tvReportDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="14 de noviembre de 2024 a las 15:30"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                            android:id="@+id/tvReportStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/status_badge_pending"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="â³ Pendiente"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Photos Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Fotos del reporte"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/tvNoPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_light_gray"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="ðŸ“·\n\nNo hay fotos disponibles"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

            <!-- Description Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="DescripciÃ³n"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/card_white_elevated"
                    android:padding="16dp"
                    android:text="Perro encontrado en la esquina de..."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            <!-- Location Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="UbicaciÃ³n"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/card_white_elevated"
                    android:orientation="vertical"
                    android:padding="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ“"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Av. Javier Prado 123, San Isidro"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                </LinearLayout>

                <TextView
                        android:id="@+id/tvCoordinates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Lat: -12.046374, Lng: -77.042793"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/btnOpenMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_rounded_orange"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="ðŸ—ºï¸ Ver en Google Maps"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <!-- Contact Section -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="InformaciÃ³n de contacto"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/card_white_elevated"
                    android:orientation="vertical"
                    android:padding="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ“ž"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+51 987 654 321"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                </LinearLayout>

                <TextView
                        android:id="@+id/btnCallPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_rounded_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="ðŸ“ž Llamar ahora"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <!-- Delete Button -->
            <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_delete"
                    android:text="ðŸ—‘ï¸ Eliminar reporte"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- Title -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros avanzados"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

        <!-- Pet Type Filter -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de mascota"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

            <LinearLayout
                    android:id="@+id/chipTypePerro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_perro" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Perro"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/chipTypeGato"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/tab_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_gato" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Gato"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/chipTypeOtro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/tab_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_otros" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Otro"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Size Filter -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipSizePequeno"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Pequeño"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipSizeMediano"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Mediano"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipSizeGrande"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Grande"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

        </LinearLayout>

        <!-- Age Filter -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad aproximada"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:singleSelection="true"
                app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipAgeCachorro"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cachorro (0-1 año)"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipAgeJoven"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joven (1-3 años)"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipAgeAdulto"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adulto (3-7 años)"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                    android:id="@+id/chipAgeSenior"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior (7+ años)"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/primary_orange"
                    app:chipStrokeWidth="1dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Health Status -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de salud"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

            <!-- Vacunado -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_vaccine" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Vacunado"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVaccinated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <!-- Esterilizado -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp">

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sterilized" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Esterilizado"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSterilized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

            <Button
                    android:id="@+id/btnClearFilters"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_secondary"
                    android:text="Limpiar"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/btnApplyFilters"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_primary"
                    android:text="Aplicar"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
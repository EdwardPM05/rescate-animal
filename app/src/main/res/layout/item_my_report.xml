<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp"
              android:background="@drawable/card_white_elevated"
              android:orientation="vertical"
              android:padding="16dp"
              android:clickable="true"
              android:focusable="true">

    <!-- Header with Icon and Type -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvReportIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="âš ï¸"
                android:textSize="24sp" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvReportType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal en peligro"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvReportDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Hace 2 dÃ­as"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

        </LinearLayout>

        <TextView
                android:id="@+id/tvReportStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_badge_pending"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="â³ Pendiente"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Location -->
    <TextView
            android:id="@+id/tvReportLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="ðŸ“ Av. Javier Prado 123, San Isidro"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

    <!-- Divider -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0" />

    <!-- Actions -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/btnDeleteReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="ðŸ—‘ï¸ Eliminar"
                android:textColor="#FF5722"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?selectableItemBackground" />

    </LinearLayout>

</LinearLayout>
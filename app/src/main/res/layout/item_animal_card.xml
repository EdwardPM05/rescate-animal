<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Animal Image con overlay para estado -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

            <ImageView
                    android:id="@+id/ivAnimalPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/surface_light"
                    android:contentDescription="Foto del animal" />

            <!-- Badge de tipo de animal -->
            <TextView
                    android:id="@+id/tvAnimalType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="ðŸ• Perro"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:elevation="2dp" />

        </FrameLayout>

        <!-- Animal Info -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Name and Age -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tvAnimalName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                <TextView
                        android:id="@+id/tvAnimalAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 aÃ±os"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:background="@drawable/age_badge_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Breed and Size -->
            <TextView
                    android:id="@+id/tvAnimalBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Mestizo"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/tvAnimalSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="TamaÃ±o: Mediano"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

            <!-- Health Status Icons - MEJORADO CON FLEXBOX LAYOUT -->
            <!-- Usamos android:layout_weight para distribuciÃ³n automÃ¡tica -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:weightSum="2">

                <!-- Badge Vacunado/No Vacunado -->
                <LinearLayout
                        android:id="@+id/layoutVaccinated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/health_badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:layout_marginEnd="4dp">

                    <TextView
                            android:id="@+id/tvVaccinatedIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’‰"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/tvVaccinatedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="Vacunado"
                            android:textColor="@color/text_primary"
                            android:textSize="10sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                </LinearLayout>

                <!-- Badge Esterilizado/No Esterilizado -->
                <LinearLayout
                        android:id="@+id/layoutSterilized"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/health_badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:layout_marginStart="4dp">

                    <TextView
                            android:id="@+id/tvSterilizedIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ‚ï¸"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/tvSterilizedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="Esterilizado"
                            android:textColor="@color/text_primary"
                            android:textSize="10sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/tvAnimalLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Villa El Salvador"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                <TextView
                        android:id="@+id/tvAnimalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="2.5 km"
                        android:textColor="@color/primary_orange"
                        android:textSize="13sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <!-- Divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0" />

            <!-- Action Button - Solo "Ver mÃ¡s" -->
            <Button
                    android:id="@+id/btnViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_primary"
                    android:text="Ver mÃ¡s"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
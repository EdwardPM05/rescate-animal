                android:text="Seleccionar UbicaciÃ³n"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

        <!-- My Location Button -->
        <TextView
                android:id="@+id/btnMyLocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circular_white"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="ðŸ“"
                android:textSize="18sp" />

    </LinearLayout>

    <!-- Center Pin Marker -->
    <ImageView
            android:id="@+id/centerMarker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pin"
            android:contentDescription="Pin de ubicaciÃ³n" />

    <!-- Location Info Card -->
    <LinearLayout
            android:id="@+id/locationInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnConfirmLocation"
            android:layout_margin="16dp"
            android:background="@drawable/card_white_elevated"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

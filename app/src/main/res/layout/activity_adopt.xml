<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">

    <!-- Main Content ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNavigation"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_orange"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:elevation="4dp">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buscar para Adoptar"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/tvResultCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Encontramos mascotas para ti"
                            android:textColor="#FFFFFF"
                            android:alpha="0.9"
                            android:textSize="13sp" />

                </LinearLayout>

                <TextView
                        android:id="@+id/btnFilter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_circular_white"
                        android:gravity="center"
                        android:text="ðŸ”§"
                        android:textSize="20sp"
                        android:clickable="true"
                        android:focusable="true" />

            </LinearLayout>

            <!-- Search Bar -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:elevation="2dp">

                <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/search_background"
                        android:hint="Buscar por nombre, raza o tipo..."
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="12dp"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint" />

            </LinearLayout>

            <!-- Distance Filter -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:elevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Radio de bÃºsqueda"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    <TextView
                            android:id="@+id/tvDistanceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 km"
                            android:textColor="@color/primary_orange"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/distance_badge"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />

                </LinearLayout>

                <SeekBar
                        android:id="@+id/seekBarDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="50"
                        android:progress="10"
                        android:progressTint="@color/primary_orange"
                        android:thumbTint="@color/primary_orange" />

            </LinearLayout>

            <!-- Category Tabs -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="1dp">

                <LinearLayout
                        android:id="@+id/tabPerros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_selected"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•"
                            android:textSize="28sp" />

                    <TextView
                            android:id="@+id/tvTabPerros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Perros"
                            android:textColor="@color/primary_orange"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/tabGatos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginHorizontal="4dp"
                        android:clickable="true"
                        android:focusable="true">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ±"
                            android:textSize="28sp" />

                    <TextView
                            android:id="@+id/tvTabGatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Gatos"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/tabOtros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_unselected"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginStart="4dp"
                        android:clickable="true"
                        android:focusable="true">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¹"
                            android:textSize="28sp" />

                    <TextView
                            android:id="@+id/tvTabOtros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Otros"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Animals Grid -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAnimals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:clipToPadding="false" />

            <!-- Empty State -->
            <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="48dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¾"
                        android:textSize="64sp"
                        android:alpha="0.5" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No hay mascotas disponibles"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Intenta ampliar el radio de bÃºsqueda\no cambia los filtros"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation (REUTILIZABLE) -->
    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />

</RelativeLayout>
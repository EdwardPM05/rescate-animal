<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">

    <!-- Main Content ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNavigation"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                    <!-- Back Button -->
                    <ImageView
                            android:id="@+id/btnBack"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_back"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp"
                            android:contentDescription="Volver" />

                    <!-- Title Section -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reportar situaci贸n"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Ay煤danos a proteger a los animales"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Report Type Section Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Tipo de reporte"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <!-- Animal en peligro -->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/reportTypeDanger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFF3E0"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                            <!-- Icon -->
                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/ic_warning"
                                    android:padding="8dp"
                                    android:background="@drawable/icon_danger_background"
                                    android:contentDescription="Animal en peligro" />

                            <!-- Text Content -->
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Animal en peligro"
                                        android:textColor="@color/text_primary"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Reportar maltrato o situaci贸n de riesgo"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Animal perdido -->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/reportTypeLost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E3F2FD"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                            <!-- Icon -->
                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/ic_lost_pet"
                                    android:padding="8dp"
                                    android:background="@drawable/icon_lost_background"
                                    android:contentDescription="Animal perdido" />

                            <!-- Text Content -->
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Animal perdido"
                                        android:textColor="@color/text_primary"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Encontr茅 un animal que parece perdido"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Animal abandonado -->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/reportTypeAbandoned"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F3E5F5"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                            <!-- Icon -->
                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/ic_rescue"
                                    android:padding="8dp"
                                    android:background="@drawable/icon_abandoned_background"
                                    android:contentDescription="Animal abandonado" />

                            <!-- Text Content -->
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Animal abandonado"
                                        android:textColor="@color/text_primary"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Animal sin hogar que necesita ayuda"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Ubicaci贸n actual"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <!-- Info sobre ubicaci贸n obligatoria -->
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E3F2FD">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/ic_info"
                                    android:contentDescription="Informaci贸n" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Para garantizar la autenticidad, solo se usar谩 tu ubicaci贸n actual del GPS"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Current Location Display -->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/locationDisplayCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:minHeight="100dp">

                            <!-- Loading State -->
                            <LinearLayout
                                    android:id="@+id/locationLoadingState"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                <ProgressBar
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        style="?android:attr/progressBarStyleSmall" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Obteniendo ubicaci贸n..."
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp" />

                            </LinearLayout>

                            <!-- Location Loaded State -->
                            <LinearLayout
                                    android:id="@+id/locationLoadedState"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:layout_marginBottom="8dp">

                                    <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginEnd="8dp"
                                            android:src="@drawable/ic_location_pin"
                                            android:contentDescription="Ubicaci贸n" />

                                    <TextView
                                            android:id="@+id/tvLocationAddress"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Calle Example 123, Lima"
                                            android:textColor="@color/text_primary"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                                <TextView
                                        android:id="@+id/tvLocationCoords"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Lat: -12.046374, Lng: -77.042793"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:layout_marginStart="28dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Refresh Location Button -->
                    <LinearLayout
                            android:id="@+id/btnRefreshLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_refresh_location"
                                android:contentDescription="Actualizar" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Actualizar ubicaci贸n"
                                android:textColor="@color/primary_orange"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Descripci贸n"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <!-- Description Input -->
                    <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/edittext_background"
                            android:gravity="top|start"
                            android:hint="Describe la situaci贸n del animal, su estado, comportamiento y cualquier detalle relevante..."
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="6"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Phone Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Tel茅fono de contacto (obligatorio)"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <!-- Phone Input with Icon -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/edittext_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_phone"
                                android:contentDescription="Tel茅fono" />

                        <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="+51 999 999 999"
                                android:inputType="phone"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_hint"
                                android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Photos Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Fotos (obligatorio)"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="* Las fotos son obligatorias para ayudar en la identificaci贸n y localizaci贸n del animal"
                            android:textColor="#FF5722"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                    <!-- Photos Upload Card -->
                    <androidx.cardview.widget.CardView
                            android:id="@+id/photoUploadCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="180dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                            <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="16dp"
                                    android:src="@drawable/ic_camera"
                                    android:contentDescription="C谩mara" />

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:text="Toma fotos en tiempo real para ayudarnos a entender la situaci贸n"
                                    android:textAlignment="center"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"
                                    android:paddingHorizontal="16dp"
                                    android:lineSpacingExtra="4dp" />

                            <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="@color/primary_orange">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="24dp"
                                        android:paddingVertical="12dp"
                                        android:text=" Tomar foto ahora"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Selected Photos RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Emergency Alert Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFEBEE">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_warning"
                                android:contentDescription="Emergencia" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="驴Es una emergencia?"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Si el animal est谩 en peligro inmediato, llama directamente:"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    <LinearLayout
                            android:id="@+id/emergencyPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_phone"
                                android:contentDescription="Tel茅fono" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+51 987 654 321"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <Button
                    android:id="@+id/btnSubmitReport"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_submit_disabled"
                    android:enabled="false"
                    android:text="Enviar reporte"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <!-- Submit Info -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Tu reporte ser谩 revisado por nuestro equipo en las pr贸ximas 2 horas"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />

</RelativeLayout>
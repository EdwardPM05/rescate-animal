<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_gray">

    <!-- Contenido Central "Próximamente" -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

        <!-- Icono -->
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_coming_soon"
                android:tint="@color/primary_orange"
                android:alpha="0.6"
                android:layout_marginBottom="24dp" />

        <!-- Título -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximamente"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

        <!-- Descripción -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta sección está en desarrollo.\nPronto estará disponible con nuevas funcionalidades."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        <!-- Indicador de Progreso -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_orange"
                    android:layout_marginEnd="8dp" />

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_orange"
                    android:layout_marginEnd="8dp" />

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_gray"
                    android:layout_marginEnd="8dp" />

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
            android:id="@+id/bottomNavigation"
            layout="@layout/bottom_navigation" />

</RelativeLayout>
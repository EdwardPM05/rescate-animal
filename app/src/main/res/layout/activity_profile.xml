<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_light">

    <!-- Main Content ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNavigation"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <!-- Back Button -->
                <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Volver"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Title -->
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Perfil"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <!-- Profile Header Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                    <!-- Profile Image -->
                    <ImageView
                            android:id="@+id/ivProfileImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/profile_circle_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_placeholder"
                            android:contentDescription="Foto de perfil" />

                    <!-- User Name -->
                    <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="María González"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    <!-- Location -->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_location_pin"
                                android:contentDescription="Ubicación" />

                        <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="Lima, Miraflores"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Information Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Información de contacto"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <!-- Email -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_email"
                                android:contentDescription="Email" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                            <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="maria.gonzalez@email.com"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_phone"
                                android:contentDescription="Teléfono" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Teléfono"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                            <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+51 987 654 321"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Member Since -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="Fecha" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Miembro desde"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                            <TextView
                                    android:id="@+id/tvJoinDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="14 de marzo de 2023"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Menu Options Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <!-- Editar Perfil -->
                    <LinearLayout
                            android:id="@+id/menuEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_edit"
                                android:contentDescription="Editar" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="Editar perfil"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:contentDescription="Ir" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="#E0E0E0" />

                    <!-- Mis reportes -->
                    <LinearLayout
                            android:id="@+id/menuMyReports"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_reports"
                                android:contentDescription="Reportes" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="Mis reportes"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:contentDescription="Ir" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="#E0E0E0" />

                    <!-- Notificaciones -->
                    <LinearLayout
                            android:id="@+id/menuNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_notifications"
                                android:contentDescription="Notificaciones" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="Notificaciones"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:contentDescription="Ir" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="#E0E0E0" />

                    <!-- Privacidad -->
                    <LinearLayout
                            android:id="@+id/menuPrivacy"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_privacy"
                                android:contentDescription="Privacidad" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="Privacidad y seguridad"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:contentDescription="Ir" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="#E0E0E0" />

                    <!-- Afiliar negocio (DINÁMICO) -->
                    <LinearLayout
                            android:id="@+id/menuAffiliate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="56dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:background="?attr/selectableItemBackground">

                        <!-- Icono que cambia dinámicamente -->
                        <ImageView
                                android:id="@+id/ivAffiliateIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_affiliate"
                                android:contentDescription="Afiliación" />

                        <!-- Contenedor de textos -->
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <!-- Título principal -->
                            <TextView
                                    android:id="@+id/tvAffiliateTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Afiliar mi negocio"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            <!-- Subtítulo descriptivo -->
                            <TextView
                                    android:id="@+id/tvAffiliateSubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="Registra tu veterinaria, tienda o albergue"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                        </LinearLayout>

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:contentDescription="Ir" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Cerrar sesión"
                        android:tint="#FF5722" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Cerrar sesión"
                        android:textColor="#FF5722"
                        android:textSize="16sp"
                        android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />

</RelativeLayout>
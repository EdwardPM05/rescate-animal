<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:elevation="4dp">

        <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â†"
                android:textSize="24sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalles de la Mascota"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Content Container -->
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Loading State -->
        <LinearLayout
                android:id="@+id/loadingState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

            <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/primary" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando detalles..."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="16dp" />

        </LinearLayout>

        <!-- Content State -->
        <ScrollView
                android:id="@+id/contentState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <!-- Pet Header Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                        <!-- Pet Name and Species -->
                        <TextView
                                android:id="@+id/tvPetName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre de la mascota"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        <TextView
                                android:id="@+id/tvPetSpecies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ• Perro"
                                android:textSize="18sp"
                                android:textColor="@color/primary"
                                android:layout_marginTop="4dp" />

                        <!-- Date -->
                        <TextView
                                android:id="@+id/tvPetDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Publicado hace 2 dÃ­as"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary"
                                android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Photos Section -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¸ Fotos"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPhotos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clipToPadding="false"
                                android:visibility="visible" />

                        <TextView
                                android:id="@+id/tvNoPhotos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No hay fotos disponibles"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Basic Info Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â„¹ï¸ InformaciÃ³n BÃ¡sica"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="16dp" />

                        <!-- Breed -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Raza:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvPetBreed"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Labrador"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Age -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Edad:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvPetAge"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="2 aÃ±os"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Gender -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="GÃ©nero:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvPetGender"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="â™‚ Macho"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Size -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="TamaÃ±o:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvPetSize"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Mediano"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Description Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ DescripciÃ³n"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="8dp" />

                        <TextView
                                android:id="@+id/tvDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DescripciÃ³n de la mascota..."
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:lineSpacingMultiplier="1.3" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Health Info Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ¥ InformaciÃ³n de Salud"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="16dp" />

                        <!-- Health Status -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Estado:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvHealthStatus"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Saludable"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Vaccinated -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Vacunado:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvVaccinated"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="âœ… SÃ­"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Sterilized -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Esterilizado:"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            <TextView
                                    android:id="@+id/tvSterilized"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="âœ… SÃ­"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Location Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ UbicaciÃ³n"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="8dp" />

                        <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lima, PerÃº"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Contact Card -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ž Contacto"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                        <!-- Phone -->
                        <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+51 999 999 999"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="12dp" />

                        <!-- Contact Buttons -->
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                            <!-- Call Button -->
                            <TextView
                                    android:id="@+id/btnCallPhone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ðŸ“ž Llamar"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:background="@drawable/button_primary"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:layout_marginEnd="8dp"
                                    android:clickable="true"
                                    android:focusable="true" />

                            <!-- WhatsApp Button -->
                            <TextView
                                    android:id="@+id/btnWhatsApp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ðŸ’¬ WhatsApp"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:background="@drawable/button_success"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:layout_marginStart="8dp"
                                    android:clickable="true"
                                    android:focusable="true" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Delete Button -->
                <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ—‘ï¸ Eliminar PublicaciÃ³n"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/button_danger"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>
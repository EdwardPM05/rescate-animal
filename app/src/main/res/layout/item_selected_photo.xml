<?xml version="1.0" encoding="utf-8"?>
<!-- Layout reutilizable para mostrar fotos seleccionadas -->
<!-- Usado en: ReportActivity, RegisterPetActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="4dp">

    <!-- Photo ImageView -->
    <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/photo_border"
            android:scaleType="centerCrop"
            android:contentDescription="Foto seleccionada" />

    <!-- Remove Button -->
    <TextView
            android:id="@+id/btnRemove"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:background="@drawable/remove_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="âœ•"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

</RelativeLayout>
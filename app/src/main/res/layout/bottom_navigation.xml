<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottomNavigation"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@android:color/white"
              android:elevation="8dp"
              android:orientation="horizontal"
              android:weightSum="6">
    <LinearLayout
            android:id="@+id/navInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconInicio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_home"
                android:contentDescription="Inicio" />

        <TextView
                android:id="@+id/textInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Inicio"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navMapa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconMapa"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_map"
                android:contentDescription="Mapa" />

        <TextView
                android:id="@+id/textMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mapa"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navReportar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconReportar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_report"
                android:contentDescription="Reportar" />

        <TextView
                android:id="@+id/textReportar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reportar"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navAdoptar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconAdoptar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_adopt"
                android:contentDescription="Adoptar" />

        <TextView
                android:id="@+id/textAdoptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Adoptar"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_profile"
                android:contentDescription="Perfil" />

        <TextView
                android:id="@+id/textPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Perfil"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navRol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

        <ImageView
                android:id="@+id/iconRol"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_rotate"
                app:tint="#757575"
                android:contentDescription="Cambiar Rol" />

        <TextView
                android:id="@+id/textRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rol"
                android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Map Fragment -->
    <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNavigation" />

    <!-- Header -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

        <!-- Back Button -->
        <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="←"
                android:textColor="@color/text_primary"
                android:textSize="24sp" />

        <!-- Title -->
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mapa de Rescates"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

        <!-- My Location Button -->
        <TextView
                android:id="@+id/btnMyLocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circular_white"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="📍"
                android:textSize="18sp" />

    </LinearLayout>

    <!-- Location Info Card (initially hidden) -->
    <LinearLayout
            android:id="@+id/locationInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomNavigation"
            android:layout_margin="16dp"
            android:background="@drawable/card_white_elevated"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

        <TextView
                android:id="@+id/tvLocationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu ubicación actual"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvLocationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Obteniendo ubicación..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tvLocationCoords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:weightSum="5">

        <!-- Inicio -->
        <LinearLayout
                android:id="@+id/navInicio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏠"
                    android:textSize="18sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

        </LinearLayout>

        <!-- Mapa -->
        <LinearLayout
                android:id="@+id/navMapa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🗺️"
                    android:textSize="18sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapa"
                    android:textColor="@color/primary_orange"
                    android:textSize="10sp"
                    android:textStyle="bold" />

        </LinearLayout>

        <!-- Reportar -->
        <LinearLayout
                android:id="@+id/navReportar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️"
                    android:textSize="18sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reportar"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

        </LinearLayout>

        <!-- Adoptar -->
        <LinearLayout
                android:id="@+id/navAdoptar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💜"
                    android:textSize="18sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adoptar"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
                android:id="@+id/navPerfil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤"
                    android:textSize="18sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">

    <!-- Main Content ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_back"
                        android:clickable="true"
                        android:focusable="true" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Registrar Mascota"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:textStyle="bold" />

            </LinearLayout>
            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFF3ED">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:scaleType="fitCenter" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Completa todos los datos para publicar la mascota en adopción"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Pet Type Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de mascota"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <!-- Perro -->
                        <LinearLayout
                                android:id="@+id/typeDog"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/tab_unselected"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_perro" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Perro"
                                    android:textColor="#757575"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Gato -->
                        <LinearLayout
                                android:id="@+id/typeCat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="4dp"
                                android:background="@drawable/tab_unselected"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_gato" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Gato"
                                    android:textColor="#757575"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Otro -->
                        <LinearLayout
                                android:id="@+id/typeOther"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/tab_unselected"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_otros" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Otro"
                                    android:textColor="#757575"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Basic Info Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Información básica"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                    <!-- Name -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                    <EditText
                            android:id="@+id/etPetName"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edittext_background"
                            android:hint="Ej: Max, Luna, Rocky"
                            android:inputType="textCapWords"
                            android:padding="16dp"
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E"
                            android:textSize="15sp"/>

                    <!-- Breed -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raza"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                    <EditText
                            android:id="@+id/etPetBreed"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edittext_background"
                            android:hint="Ej: Mestizo, Labrador, Siamés"
                            android:inputType="textCapWords"
                            android:padding="16dp"
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E"
                            android:textSize="15sp"/>

                    <!-- Age Selection -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edad aproximada"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                        <Spinner
                                android:id="@+id/spinnerYears"
                                android:layout_width="0dp"
                                android:layout_height="52dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/edittext_background"
                                android:padding="12dp"/>

                        <Spinner
                                android:id="@+id/spinnerMonths"
                                android:layout_width="0dp"
                                android:layout_height="52dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/edittext_background"
                                android:padding="12dp"/>

                    </LinearLayout>

                    <!-- Size -->
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tamaño"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                    <Spinner
                            android:id="@+id/spinnerPetSize"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/edittext_background"
                            android:padding="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                    <!-- LinearLayout contenedor para controlar el tamaño del ícono -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/edittext_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location_pin"
                                android:scaleType="fitCenter"
                                android:layout_marginEnd="5dp" />

                        <TextView
                                android:id="@+id/etPetLocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Ubicación del albergue"
                                android:textColor="#212121"
                                android:textColorHint="#9E9E9E"
                                android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                            android:id="@+id/tvSelectedCoordinates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="La ubicación se obtendrá automáticamente"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Health Status Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de salud"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                    <!-- Vaccinated -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/health_badge_green"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_vaccine" />

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vacunado"
                                    android:textColor="#4CAF50"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Todas las vacunas al día"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp" />

                        </LinearLayout>

                        <CheckBox
                                android:id="@+id/cbVaccinated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#4CAF50" />

                    </LinearLayout>

                    <!-- Sterilized -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/health_badge_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_sterilized" />

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Esterilizado"
                                    android:textColor="#2196F3"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Castrado o esterilizado"
                                    android:textColor="#2196F3"
                                    android:textSize="12sp" />

                        </LinearLayout>

                        <CheckBox
                                android:id="@+id/cbSterilized"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#2196F3" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Photo Upload Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto de la mascota *"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                    <LinearLayout
                            android:id="@+id/photoUploadContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="180dp"
                            android:background="@drawable/photo_upload_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="24dp">

                        <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_camera"
                                android:layout_marginBottom="12dp" />

                        <TextView
                                android:id="@+id/tvPhotoStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Toca aquí para tomar una foto"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                    <EditText
                            android:id="@+id/etPetDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/edittext_background"
                            android:gravity="top|start"
                            android:hint="Describe la personalidad, comportamiento y cualquier información relevante..."
                            android:inputType="textMultiLine"
                            android:maxLines="6"
                            android:padding="16dp"
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Button -->
            <Button
                    android:id="@+id/btnRegisterPet"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/button_primary"
                    android:text="Registrar mascota"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
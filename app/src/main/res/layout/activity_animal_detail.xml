<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_light">

    <!-- Main Content ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomButtons"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Photo Header -->
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <ImageView
                        android:id="@+id/ivAnimalPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/surface_light" />

                <!-- Back Button -->
                <TextView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/button_circular_white"
                        android:gravity="center"
                        android:text="â†"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:clickable="true"
                        android:focusable="true" />

                <!-- Share Button -->
                <TextView
                        android:id="@+id/btnShare"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="16dp"
                        android:background="@drawable/button_circular_white"
                        android:gravity="center"
                        android:text="ðŸ“¤"
                        android:textSize="20sp"
                        android:clickable="true"
                        android:focusable="true" />

                <!-- Distance Badge -->
                <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:background="@drawable/badge_distance"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="2.5 km de ti"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

            </FrameLayout>

            <!-- Main Info Card -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                <!-- Name and Type -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tvAnimalName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Max"
                                android:textColor="@color/text_primary"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/tvAnimalType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="ðŸ• Perro"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Quick Info Grid -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                    <!-- Raza -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/card_light_orange">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Raza"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        <TextView
                                android:id="@+id/tvAnimalBreed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Mestizo"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Edad -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/card_light_orange">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edad"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        <TextView
                                android:id="@+id/tvAnimalAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="2 aÃ±os"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <!-- TamaÃ±o -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/card_light_orange">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TamaÃ±o"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        <TextView
                                android:id="@+id/tvAnimalSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Mediano"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“"
                            android:textSize="18sp" />

                    <TextView
                            android:id="@+id/tvAnimalLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Villa El Salvador, Lima"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Acerca de mÃ­"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Soy un perro muy cariÃ±oso y juguetÃ³n. Me encanta jugar con otros perros y con niÃ±os. Estoy buscando una familia que me dÃ© mucho amor."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                <!-- Health Status -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Estado de salud"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                    <!-- Vaccinated -->
                    <LinearLayout
                            android:id="@+id/iconVaccinated"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/edittext_background">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’‰"
                                android:textSize="20sp" />

                        <TextView
                                android:id="@+id/tvVaccinatedStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Vacunado"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Sterilized -->
                    <LinearLayout
                            android:id="@+id/iconSterilized"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/edittext_background">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ‚ï¸"
                                android:textSize="20sp" />

                        <TextView
                                android:id="@+id/tvSterilizedStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Esterilizado"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Shelter Info -->
                <LinearLayout
                        android:id="@+id/layoutShelterInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/card_light_yellow"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="visible">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ "
                                android:textSize="20sp" />

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Albergue"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                            <TextView
                                    android:id="@+id/tvShelterName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="Albergue Patitas Felices"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="16dp">

        <Button
                android:id="@+id/btnContactShelter"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary"
                android:text="Contactar"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/btnAdoptNow"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:text="Adoptar"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
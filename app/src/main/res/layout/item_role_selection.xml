<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvRoleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/ivRoleIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person_outline"
                app:tint="#555555" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

            <TextView
                    android:id="@+id/tvRoleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo Usuario"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tvRoleDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n del rol"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/ivSelectedCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@color/primary_orange"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>